<%= flash[:notice] %>
<table>
<thead>
<tr>
    <th>Reference</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Home Phone Number</th>
    <th>Mobile Phone Number</th>
    <th>Email</th>
    <th>Address</th>
</tr>
</thead>
<tbody>
<% @persons.each do |person| %>
    <tr>
        <td><%= person.reference %></td>
        <td><%= person.firstname %></td>
        <td><%= person.lastname %></td>
        <td><%= person.home_phone_number %></td>
        <td><%= person.mobile_phone_number %></td>
        <td><%= person.email %></td>
        <td><%= person.address %></td>
    </tr>
<% end %>
</tbody>
</table

<div>
<h4>Import Person Data</h4>
    <%= form_tag import_persons_path, multipart: true do %>
        <%= file_field_tag :file %>
        <%= submit_tag "Import CSV" %>
    <% end %>
</div>